#include <stdio.h>

// 输入函数：通过指针接收数组，输入10个整数
void input(int *arr, int n) {
    for (int i = 0; i < n; i++) {
        scanf("%d", arr + i); // 指针方式访问数组元素
    }
}

// 对换函数：找到最小/大值下标，交换对应元素
void swapMinMax(int *arr, int n) {
    int minIdx = 0, maxIdx = 0;
    // 遍历数组，确定最小、最大值的下标
    for (int i = 1; i < n; i++) {
        if (*(arr + i) < *(arr + minIdx)) {
            minIdx = i;
        }
        if (*(arr + i) > *(arr + maxIdx)) {
            maxIdx = i;
        }
    }
    // 交换“最小值”与“第一个元素”
    int temp = *(arr + 0);
    *(arr + 0) = *(arr + minIdx);
    *(arr + minIdx) = temp;
    // 交换“最大值”与“最后一个元素”
    temp = *(arr + n - 1);
    *(arr + n - 1) = *(arr + maxIdx);
    *(arr + maxIdx) = temp;
}

// 输出函数：通过指针遍历数组并输出
void output(int *arr, int n) {
    for (int i = 0; i < n; i++) {
        printf("%d ", *(arr + i));
    }
    printf("\n");
}

int main() {
    int arr[10];
    input(arr, 10);   // 调用输入函数
    swapMinMax(arr, 10); // 调用对换函数
    output(arr, 10);  // 调用输出函数
    return 0;
}
