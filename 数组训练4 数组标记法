#include <stdio.h>
int main()
{
    int l,m,a[10000],count=0,u,v;
    scanf("%d %d",&l,&m);
    for(int i=0;i<=l;i++){
        a[i]=0;
    }
    for(;m>0;m--){
        scanf("%d %d",&u,&v);
        for(;u<=v;u++){
            a[u]=1;
}
    }
    for(int j=0;j<=l;j++){
        if(a[j]==0){
            count++;
        }
    }
    printf("%d",count);
    return 0;
}
