#include <stdio.h>
#include <string.h>

int main() {
    int n;           // 存储密码的偏移量
    char s[51];      // 存储原文字符串，长度不超过50个字符 + 1个结束符
    
    // 读取输入
    scanf("%d", &n); // 读取偏移量n
    scanf("%s", s);  // 读取原文字符串
    
    int len = strlen(s); // 获取字符串的实际长度
    
    // 遍历字符串中的每个字符
    for (int i = 0; i < len; i++) {
        // 凯撒密码加密核心算法：
        // 1. s[i] - 'a': 将字符转换为0-25的数字（a=0, b=1, ..., z=25）
        // 2. + n: 加上偏移量
        // 3. % 26: 取模26确保结果在0-25范围内循环（处理z后面的情况）
        // 4. + 'a': 将数字转换回对应的字母字符
        s[i] = 'a' + (s[i] - 'a' + n) % 26;
    }
    
    // 输出加密后的密码字符串
    printf("%s", s);
    
    return 0; // 程序正常结束
}
